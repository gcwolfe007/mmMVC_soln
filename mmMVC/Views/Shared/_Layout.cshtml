@using System.Web.Optimization
@using BootstrapSupport
@using NavigationRoutes
<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8">
	<title>@ViewBag.Title</title>
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<meta http-equiv="X-UA-Compatible" content="IE=Edge">
	<link href="@Styles.Url("~/content/css")" rel="stylesheet"/>
	<style type="text/css">
		body
		{
			@*padding-top: 75px;*@
			padding-bottom: 40px;
		}
	</style>
	<link href="@Styles.Url("~/Content/css-responsive")" rel="stylesheet" type="text/css" />
	@RenderSection("head", required: false)
	@Html.Partial("_html5shiv")
	@* favicons and touch icons go here *@
</head>
<body>
	<div class="container">
        <div class="row-fluid">
            <p></p>
            <div class="span2">
                <a href="../Home/Index">
                    <img src="../../Images/trackum.png" alt="trackum" class  /></a>
            </div>
            <div class="pull-right">
                <section id="login">
                    @Html.Partial("_LoginPartial")
                </section>
            </div>
        </div>
		<div class="navbar navbar-inverse navbar">
			<div class="navbar-inner">
				<div class="container">
					<a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse"><span
						class="icon-bar"></span><span class="icon-bar"></span><span class="icon-bar"></span>
					</a><a class="brand">Mega Self Storage Center</a>
					<div class="nav-collapse">
						<ul class="nav">
							@Html.Navigation()
						</ul>
					</div>
					<!--/.nav-collapse -->
					<div class="navbar-form pull-right">
					</div>
				</div>
			</div>
		</div>
	</div>
	<div class="container">
		@Html.Partial("_alerts")
		@RenderBody()
		<hr>
		<footer>
			<p>
				&copy; Company @System.DateTime.Now.ToString("yyyy")</p>
		</footer>
	</div>
	@Scripts.Render("~/js")
	@RenderSection("Scripts", required: false)
</body>
</html>
