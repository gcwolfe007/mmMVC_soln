@model MM.Library.Entities.RenterAccountEdit
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <div class="row-fluid">
        <ul class="breadcrumb">
            <li>@Html.ActionLink("Home", "Index", "Home") <span class="divider">/</span></li>
            <li>@Html.ActionLink("Back to List", "Index")<span class="divider">/</span></li>
            <li class="active">Edit Account</li>
        </ul>
    </div>
    <div class="row-fluid">
      @*  <div class="span1">
            <h2>
                Edit</h2>
        </div>*@
        <div class="span10">
            @using (Html.BeginForm("Edit", "Renter", FormMethod.Post, new { @class = "form-horizontal" }))
            {
                @Html.ValidationSummary(true)

                <fieldset>
                 <!-- Modal -->
                        <div id="myModal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
                            aria-hidden="true">
                            <div class="modal-header">
                                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                                    ×</button>
                                <h3 id="myModalLabel">
                                    Modal header</h3>
                            </div>
                            <div class="modal-body">
                                <p>
                                  @Html.EditorFor(model => model.Renter.FirstName)
                                    
                                    </p>
                            </div>
                            <div class="modal-footer">
                                <button class="btn" data-dismiss="modal" aria-hidden="true">
                                    Close</button>
                                <button class="btn btn-primary">
                                    Save changes</button>
                            </div>
                        </div>
                    <legend><span class="editor-label"><strong>@Html.DisplayFor(model => model.Renter.FullName)
                    </strong></span>
                       <!-- Button to trigger modal -->
                        <a href="#myModal" role="button" class="btn" data-toggle="modal">Launch demo modal</a>
                       
                    
                    </legend>
                    <address>
                        @Html.DisplayFor(model => model.Renter.Addresses[0].LineOne)<br />
                        @Html.DisplayFor(model => model.Renter.Addresses[0].CityTown),
                        @Html.DisplayFor(model => model.Renter.Addresses[0].StateProvince)
                        @Html.DisplayFor(model => model.Renter.Addresses[0].PostalCode)<br />
                        <abbr title="Phone">
                            P:</abbr>
                        (123) 456-78906.
                    </address>
                    <div class="control-group">
                        @Html.LabelFor(model => model.CreateDate)
                        @Html.DisplayFor(model => model.CreateDate, new { @class = "controls" })
                    </div>
                    <div class="control-group">
                        @Html.LabelFor(model => model.CreateUserID)
                        @Html.DisplayFor(model => model.CreateUserID)
                    </div>
                    <div style="background-color: Beige; border: 1px solid silver; border-radius: 8px;
                        padding: 20px">
                        <ul class="nav nav-tabs">
                            <li><a href="#units" data-toggle="tab">Storage Units Rented</a></li>
                            <li><a href="#transactions" data-toggle="tab">Account Transations</a></li>
                            <li><a href="#messages" data-toggle="tab">Messages</a></li>
                            <li><a href="#details" data-toggle="tab">Tenant Account Details</a></li>
                        </ul>
                        <div class="tab-content">
                            <div class="tab-pane active" id="units">
                                Go your Self</div>
                            <div class="tab-pane" id="transactions">
                                Same to you</div>
                            <div class="tab-pane" id="messages">
                                WE the people</div>
                            <div class="tab-pane" id="details">
                                In order to
                            </div>
                        </div>
                    </div>
                    <p>
                        <input type="submit" value="Save" />
                    </p>
                </fieldset>
            }
        </div>
    </div>
    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
